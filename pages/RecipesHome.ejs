<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Recipes App</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
    integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/output.css" />
</head>

<body class="bg-slate-900 text-white pt-16">

  <%- include('partial/nav') %>

  <main class="max-w-6xl mx-auto px-4">

      <!-- Hero / Cards Section -->
      <section class="max-w-6xl mx-auto px-4 grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 gap-6">

        <% if (recipes && recipes.length> 0) { %>
          <% recipes.forEach(recipe=> { %>

            <!-- Recipe Card -->
            <div class="bg-white rounded-xl shadow hover:shadow-xl transition overflow-hidden">

              <!-- Image -->
              <img src="<%= recipe.image %>" alt="<%= recipe.title %>" class="w-full h-44 object-cover">

              <!-- Content -->
              <div class="p-4">
                <h3 class="text-lg font-semibold text-gray-800 mb-1">
                  <%= recipe.title %>
                </h3>

                <p class=" text-sm text-gray-700 mb-3">
                  <%= recipe.instructions.substring(0, 80) %>...
                </p>

                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-500">
                    â± <%= recipe.cookTime %> mins
                  </span>
                  <a href="/getRecipeById/<%= recipe._id %>"
                    class="inline-flex items-center gap-2 text-white bg-orange-600 px-5 py-2 rounded-full shadow-lg hover:bg-orange-700">
                    Get the recipe
                    <i class="fa-sharp fa-solid fa-angle-right"></i>
                  </a>


                </div>
              </div>
            </div>

            <% }) %>
              <% } else { %>

                <!-- Empty State -->
                <p class="col-span-full text-center text-gray-500 text-lg">
                  No recipes found. Add your first recipe
                </p>

                <% } %>

      </section>
    </main>

</body>

</html>